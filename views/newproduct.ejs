<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= product ? 'Edit Product' : 'Add New Product' %></title>
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon.png" />
  <link href="/css/style.css" rel="stylesheet" />

</head>

<body>
  <div id="preloader">
    <div class="sk-three-bounce">
      <div class="sk-child sk-bounce1"></div>
      <div class="sk-child sk-bounce2"></div>
      <div class="sk-child sk-bounce3"></div>
    </div>
  </div>

  <div id="main-wrapper">
    <!-- Nav Header -->
    <div class="nav-header">
      <a href="/dashboard" class="brand-logo">
        <img class="logo-abbr" src="/images/logo.png" alt="">
        <img class="logo-compact" src="/images/logo-text.png" alt="">
        <img class="brand-title" src="/images/logo-text.png" alt="">
      </a>
      <div class="nav-control">
        <div class="hamburger">
          <span class="line"></span><span class="line"></span><span class="line"></span>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="header">
      <div class="header-content">
        <nav class="navbar navbar-expand">
          <div class="collapse navbar-collapse justify-content-between">
            <div class="header-left">
              <div class="search_bar dropdown">
                <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                  <i class="mdi mdi-magnify"></i>
                </span>
                <div class="dropdown-menu p-0 m-0">
                  <form>
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" />
                  </form>
                </div>
              </div>
            </div>
            <ul class="navbar-nav header-right">
              <li class="nav-item dropdown header-profile">
                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                  <i class="mdi mdi-account"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                  <a href="/logout" class="dropdown-item">
                    <i class="icon-key"></i>
                    <span class="ml-2">Logout</span>
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>

    <!-- Sidebar -->
<%-include ("sidebar.ejs")%>

<!-- Content -->
 <div class="content-body">
      <div class="container-fluid">
<div class="container mt-4">
  <form 
    action="<%= product ? '/product/edit/' + product._id : '/product/new' %>" 
    method="POST" 
    enctype="multipart/form-data"
  >
    <div class="card">
      <div class="card-body p-4">
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="row">
          <!-- Name -->
          <div class="form-group col-md-6 mb-3">
            <label>Product Name</label>
            <input 
              type="text" 
              name="name" 
              class="form-control form-control-sm" 
              value="<%= product ? product.name : '' %>" 
              required 
            />
          </div>

          <!-- Price -->
          <div class="form-group col-md-6 mb-3">
            <label>Price (₹)</label>
            <input 
              type="number" 
              name="price" 
              class="form-control form-control-sm" 
              value="<%= product ? product.price : '' %>" 
              required 
            />
          </div>

          <!-- Categories -->
          <div class="form-group col-md-6 mb-3">
            <label>Category</label>
            <select name="category" class="form-control form-control-sm" multiple size="4" required>
              <% categories.forEach(cat => { %>
                <option value="<%= cat._id %>" 
                  <%= product && product.categories?.includes(cat._id.toString()) ? 'selected' : '' %>>
                  <%= cat.name %>
                </option>
              <% }) %>
            </select>
          </div>

          <!-- Sizes -->
          <div class="form-group col-md-6 mb-3">
            <label>Sizes (Select multiple)</label>
            <select name="sizes" class="form-control form-control-sm" multiple size="4" required>
              <% const availableSizes = ['XS', 'S', 'M', 'L', 'XL', 'XXL']; %>
              <% availableSizes.forEach(size => { %>
                <option value="<%= size %>" 
                  <%= product?.sizes?.includes(size) ? 'selected' : '' %>>
                  <%= size %>
                </option>
              <% }) %>
            </select>
          </div>

          <!-- Description -->
          <div class="form-group col-12 mb-3">
            <label>Description</label>
            <textarea 
              name="description" 
              class="form-control form-control-sm" 
              rows="3" 
              style="resize: vertical;"
              required
            ><%= product?.description || '' %></textarea>
          </div>

          <!-- Images -->
          <div class="form-group col-12 mb-3">
            <label>Product Images</label>
            <input type="file" name="images" class="form-control form-control-sm" multiple />
            <% if (product?.images?.length) { %>
              <p class="mt-2">Current Images:</p>
              <div class="d-flex gap-2 flex-wrap">
                <% product.images.forEach(img => { %>
                  <img src="<%= img %>" height="80" class="me-2 mb-2 border rounded" />
                <% }) %>
              </div>
            <% } %>
          </div>

          <!-- Status -->
          <div class="form-group col-md-6 mb-3">
            <label>Status</label>
            <select name="status" class="form-control form-control-sm">
              <option value="Live" <%= product?.status === 'Live' ? 'selected' : '' %>>Active</option>
              <option value="Inactive" <%= product?.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-sm mt-3">
          <%= product ? 'Update Product' : 'Add Product' %>
        </button>
      </div>
    </div>
  </form>
</div>
      </div>
    </div>


    <!-- Footer -->
    <div class="footer">
      <div class="copyright">
        <p>Copyright © Designed & Developed by <a href="#">Quixkit</a> 2019</p>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/vendor/global/global.min.js"></script>
  <script src="/js/quixnav-init.js"></script>
  <script src="/js/custom.min.js"></script>
</body>
</html>
